{
  "version": 2,
  "name": "recipe-scraper-api",
  "builds": [
    {
      "src": "api/scrape.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/recipes.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/scrape",
      "dest": "/api/scrape.ts"
    },
    {
      "src": "/api/recipes",
      "dest": "/api/recipes.ts"
    },
    {
      "src": "/api/health",
      "dest": "/api/scrape.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"],
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
